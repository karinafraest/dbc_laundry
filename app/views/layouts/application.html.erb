<!DOCTYPE html>
<html>
  <head>
    <title>DbcLoundry</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= render "layouts/clients_nav.html.erb" if current_client %>

    <%= render "layouts/admins_nav.html.erb" if current_admin %>

    <%= render "layouts/shippers_nav.html.erb" if current_shipper %>

    <!-- Devise notice and alert -->
    <div class="row justify-content-center">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
   
    <div class="container">
      <%= yield %>
    </div>

    <footer class="footer row justify-content-center">   

      <% if current_admin %>
        <%= link_to("Admin Logout ", destroy_admin_session_path, method: "delete") %> <br>
      <% else %>
        <%= link_to("Admin Login ", new_admin_session_path) %> <br>
      <% end %>
  
      <%if current_shipper  %>
        <%= link_to("Shipper Logout ", destroy_shipper_session_path, method: "delete") %> <br>
      <% else %>
        <%= link_to("Shipper Login ", new_shipper_session_path) %> <br>
      <% end %>

    </footer>
  </body>
</html>
